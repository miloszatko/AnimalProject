<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sk.mmx.animalProject.MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBackground"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bkg_universal3x"/>
    <Button
            android:layout_height="150dp"
            android:id="@+id/buttonFarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonPolar"
            android:background="@drawable/btn_farm3x" android:layout_width="150dp"
            android:tag="1" app:layout_constraintVertical_bias="0.6"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/buttonPolar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/buttonFarm"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonSavana"
            android:background="@drawable/btn_polar3x" android:tag="2" app:layout_constraintVertical_bias="0.6"/>
    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/buttonSavana"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/buttonPolar"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonForest"
            android:background="@drawable/btn_savana3x" android:tag="3" app:layout_constraintVertical_bias="0.6"/>
    <Button
            android:id="@+id/buttonForest"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/buttonSavana"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_forest3x" android:layout_width="150dp" android:layout_height="150dp"
            android:tag="4" app:layout_constraintVertical_bias="0.6"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/btn_settings"
            android:id="@+id/imageViewSettings"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>