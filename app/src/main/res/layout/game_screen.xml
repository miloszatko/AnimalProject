<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBackground" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:srcCompat="@drawable/bkg_farm3x"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/btnFirst"
            android:background="@drawable/animal_cat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnSecond"
            app:layout_constraintVertical_bias="0.7" android:tag="0"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/btnThird"
            android:background="@drawable/animal_goat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnSecond"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.7" android:tag="2"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/btnSecond"
            android:background="@drawable/animal_dog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnFirst"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnThird"
            app:layout_constraintVertical_bias="0.7" android:tag="1"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewClose"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:backgroundTintMode="add"
            app:srcCompat="@drawable/btn_close"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAnimal" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/black" android:textStyle="bold"
            android:textSize="30sp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>